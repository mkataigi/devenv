{
  "name": "Node.js 20 with Claude Code",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "runArgs": [
    "--name",
    "${localEnv:DEVCONTAINER_NAME:devcontainer-node20}"
  ],
  "remoteEnv": {
    "NODE_ENV": "development",
    "CLAUDE_CODE_USE_VERTEX": "${localEnv:CLAUDE_CODE_USE_VERTEX}",
    "CLOUD_ML_REGION": "${localEnv:CLOUD_ML_REGION}",
    "ANTHROPIC_VERTEX_PROJECT_ID": "${localEnv:ANTHROPIC_VERTEX_PROJECT_ID}",
    "GOOGLE_GENAI_USE_VERTEXAI": "${localEnv:GOOGLE_GENAI_USE_VERTEXAI}",
    "GOOGLE_CLOUD_LOCATION": "${localEnv:GOOGLE_CLOUD_LOCATION}",
    "GOOGLE_CLOUD_PROJECT": "${localEnv:GOOGLE_CLOUD_PROJECT}"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "installYarnUsingApt": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/anthropics/devcontainer-features/claude-code:latest": {}
  },
  "postCreateCommand": "npm install -g pnpm",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}
